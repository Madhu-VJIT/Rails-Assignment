<div class="container">
  <div class="alert alert-info" role="alert">
    <h2>Url Shortener</h2>
  </div>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Original_url</th>
        <th scope="col">Short_url</th>
      </tr>
    </thead>
    <tbody>
    <% @urls.each do |url| %>
      <tr>
        <td><%= url.name %></td>
        <td><%= url.original_url %></td>
        <td><%= link_to url.short_url, url.original_url %></td>
        <td><%= button_to 'Destroy', url_path(url), method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= button_to 'Create a shortened link', new_url_path, method: :get, class: "btn btn-primary" %>
</div>