<div class="container">
  <div class="alert alert-info" role="alert">
    <h4>Input Url for shortening</h4>
  </div>
  <%= flash[:error] %>
  <%= form_with model: @url do |f| %>
    <div class="card">
      <div class="card-body">
        <div class="mb-3">
          <%= f.label :name, { class: "form-label"} %>
          <%= f.text_field :name, { class: "form-control", placeholder: "Youtube" } %>
        </div>
        <br/>
        <div class="mb-3">
          <%= f.label :url, { class: "form-label"} %>
          <%= f.text_field :original_url, { class: "form-control", placeholder: "https://www.youtube.com/" } %>
        </div>
        <br/>
        <%= f.submit "Submit", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
